{
  "name": "m3ujs",
  "version": "0.2.1",
  "description": "Create m3u files",
  "main": "dist/src/index.js",
  "files": [
    "dist/src",
    "src",
    "index.d.ts"
  ],
  "scripts": {
    "linter": "tslint --project ./tsconfig.json",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --sourceMap",
    "precopy-test-assets": "npm run build",
    "copy-test-assets": "cp test/*.mp3 dist/test/",
    "pretest": "npm run copy-test-assets",
    "test": "mocha --require source-map-support/register --recursive dist/test",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w",
    "prerelease": "npm test && npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish",
    "prepublish": "not-in-install && npm run build || echo 'In install cycle, skipping prepublish'",
    "precoverage": "npm run clean && tsc --inlineSourceMap && cp test/*.mp3 dist/test/",
    "coverage": "nyc --reporter lcov ./node_modules/.bin/mocha --recursive dist/test --all"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/m3ujs"
  },
  "keywords": [
    "m3u",
    "playlist"
  ],
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "license": "MIT",
  "devDependencies": {
    "@knisterpeter/standard-tslint": "1.7.2",
    "chai": "4.1.2",
    "coveralls": "3.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "in-publish": "2.0.0",
    "mocha": "5.1.1",
    "nyc": "11.7.1",
    "rimraf": "2.6.2",
    "source-map-support": "0.5.4",
    "standard-version": "^4.2.0",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "id3v2": "^0.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "coverage",
      "dist/test"
    ]
  }
}
