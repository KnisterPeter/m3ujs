{
  "name": "m3ujs",
  "version": "0.2.0",
  "description": "Create m3u files",
  "main": "dist/src/index.js",
  "files": [
    "dist/src",
    "src",
    "index.d.ts"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --sourceMap",
    "precopy-test-assets": "npm run build",
    "copy-test-assets": "cp test/*.mp3 dist/test/",
    "pretest": "npm run copy-test-assets",
    "test": "mocha --require source-map-support/register --recursive dist/test",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w",
    "preversion": "npm test",
    "version": "npm run build && conventional-changelog -p angular -v -r 0 > CHANGELOG.md && git add -A .",
    "postversion": "git push && git push --tags",
    "prepublish": "not-in-install && npm run build || echo 'In install cycle, skipping prepublish'",
    "precoverage": "npm run clean && tsc --inlineSourceMap && cp test/*.mp3 dist/test/",
    "coverage": "nyc --reporter lcov ./node_modules/.bin/mocha --recursive dist/test --all"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/m3ujs"
  },
  "keywords": [
    "m3u",
    "playlist"
  ],
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "3.5.0",
    "coveralls": "2.11.12",
    "cz-conventional-changelog": "1.2.0",
    "in-publish": "2.0.0",
    "mocha": "3.0.2",
    "nyc": "8.0.0",
    "rimraf": "2.5.4",
    "source-map-support": "0.4.2",
    "tslint": "3.14.0",
    "typescript": "1.8.10"
  },
  "dependencies": {
    "id3v2": "0.2.1"
  },
  "publishConfig": {
    "tag": "next"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "coverage",
      "dist/test"
    ]
  }
}
